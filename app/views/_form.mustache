<!-- Form -->
<form id="user-form" user-id="{{user._id}}">
  <div class="form-group">
    <label for="name">Name</label>
    <input
      type="name"
      class="form-control"
      id="name"
      required
      value="{{user.name}}"
    />
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input
      type="email"
      class="form-control"
      id="email"
      required
      value="{{user.email}}"
    />
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input
      type="password"
      class="form-control"
      id="password"
      required
      value="{{user.password}}"
    />
  </div>
  <button type="submit" class="btn btn-primary">
    Submit
  </button>
</form>
<!-- /Form -->

<!-- Form message -->
<div class="form-messages mt-3">
  <small class="form-text text-muted" id="loading-message">
    loading ...
  </small>
  <small class="form-text text-danger" id="failed-message">
    something went wrong
  </small>
  <small class="form-text text-success" id="success-message">
    user updated
  </small>
</div>
<!-- /Form message -->
